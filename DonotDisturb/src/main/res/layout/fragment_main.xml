<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Switch
                android:id="@+id/dnd_enabled"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/enabled"
                android:layout_weight="100"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView android:text="@string/enabled_desc"/>
        </TableRow>

        <TableRow android:layout_width="fill_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1">
            <Switch
                android:id="@+id/ring_for_contacts"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="@string/contacts"
                android:layout_weight="100"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Switch
                android:id="@+id/ring_on_repeat"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="@string/repeat_on_ring"
                android:layout_weight="100"/>
        </TableRow>

        <TableRow android:layout_width="fill_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/ring_on_repeat_desc"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:text="@string/start"
                android:layout_weight="100"
                android:layout_width="wrap_content"/>

            <Button
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_start_time"
                android:onClick="showTimePickerDialog"
                android:tag="1320"
                android:layout_weight="100"/>
        </TableRow>

        <TableRow android:layout_width="fill_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1">
            <TextView
                android:text="@string/end"
                android:layout_weight="100"
                android:layout_width="wrap_content"/>

            <Button
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_end_time"
                android:tag="360"
                android:onClick="showTimePickerDialog"
                android:layout_weight="100"/>
        </TableRow>
    </LinearLayout>
</LinearLayout>